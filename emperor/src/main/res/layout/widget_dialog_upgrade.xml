<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88888888">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_centerInParent="true"
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_customdialog_ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20px"
            android:text="更新标题"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/color_272930"
            android:tag="beta_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_f0f0f0"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="升级信息"
            android:padding="20px"
            android:textSize="12sp"
            android:tag="beta_upgrade_info"
            android:textColor="@color/color_000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新说明："
            android:textSize="13sp"
            android:layout_marginLeft="20px"
            android:textColor="@color/color_000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更新属性"
            android:textSize="12sp"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:maxLines="10"
            android:textColor="@color/color_ffb321"
            android:tag="beta_upgrade_feature"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20px"
            android:background="@color/color_f0f0f0"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_dialogNegative"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="下次再说"
                android:textSize="18sp"
                android:textColor="@color/color_a0a0a0"
                android:background="@null"
                android:tag="beta_cancel_button"/>
            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_f0f0f0"/>
            <Button
                android:id="@+id/bt_dialogPositive"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="立即更新"
                android:textSize="18sp"
                android:textColor="@color/color_ffb321"
                android:background="@null"
                android:tag="beta_confirm_button"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>