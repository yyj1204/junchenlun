<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    android:orientation="vertical"
    tools:context="com.wktx.www.emperor.ui.activity.SearchActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:background="@color/color_ffb321"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <ImageView
            android:id="@+id/tb_IvReturn"
            android:layout_width="@dimen/px_66"
            android:layout_height="@dimen/px_86"
            android:paddingBottom="@dimen/px_20"
            android:paddingRight="@dimen/px_40"
            android:paddingTop="@dimen/px_20"
            android:layout_gravity="center_vertical|left"
            android:src="@drawable/arrow_left" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_60"
            android:layout_marginRight="@dimen/px_40"
            android:layout_weight="1">
            <EditText
                android:id="@+id/title_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_search"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="@dimen/px_14"
                android:gravity="center|left"
                android:hint="请输入搜索内容"
                android:paddingLeft="@dimen/px_40"
                android:textColor="@color/color_000000"
                android:textColorHint="@color/color_888888"
                android:textSize="@dimen/sp_13" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignRight="@+id/title_search"
                android:gravity="center"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_30"
                android:text="搜索"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_15" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/px_30"
        android:gravity="center_vertical">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textColor="@color/color_000000"
           android:textSize="@dimen/sp_14"
           android:text="历史搜索"/>
        <ImageView
            android:id="@+id/searchIvDelete"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_72"
            android:paddingRight="@dimen/px_30"
            android:paddingTop="@dimen/px_20"
            android:paddingBottom="@dimen/px_20"
            android:paddingLeft="@dimen/px_30"
            android:src="@drawable/delete"/>
    </LinearLayout>
</LinearLayout>
