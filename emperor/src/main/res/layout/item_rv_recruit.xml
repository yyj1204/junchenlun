<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    android:paddingBottom="@dimen/px_30">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:paddingTop="@dimen/px_42">
        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/px_106"
            android:layout_height="@dimen/px_106"
            android:scaleType="fitXY"
            android:src="@drawable/icon_head_woman" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_15" />
                <ImageView
                    android:id="@+id/iv_sex"
                    android:layout_width="@dimen/px_24"
                    android:layout_height="@dimen/px_24"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/icon_sex_woman" />
                <TextView
                    android:id="@+id/tv_workYears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_14"
                    android:layout_gravity="bottom"
                    android:text="0年"
                    android:background="@drawable/shape_buttom_nine"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_12" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|bottom"
                    android:text="￥"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_6"
                    android:text="0元"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/linear_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="擅长类目："
                    android:textColor="@color/color_a0a0a0"
                    android:textSize="@dimen/sp_13" />
                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_13" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/linear_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="擅长风格："
                    android:textColor="@color/color_a0a0a0"
                    android:textSize="@dimen/sp_13" />
                <TextView
                    android:id="@+id/tv_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_13" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/linear_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打字速度："
                    android:textColor="@color/color_a0a0a0"
                    android:textSize="@dimen/sp_13" />
                <TextView
                    android:id="@+id/tv_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_13" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_28"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_workExperience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_stroke_a0a0a0_18"
                    android:text="工作经验"
                    android:textColor="@color/color_a0a0a0"
                    android:textSize="@dimen/sp_12" />
                <TextView
                    android:id="@+id/tv_jobStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_20"
                    android:background="@drawable/shape_stroke_a0a0a0_18"
                    android:lines="1"
                    android:text="工作状态"
                    android:textColor="@color/color_a0a0a0"
                    android:textSize="@dimen/sp_12" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.jaeger.ninegridimageview.NineGridImageView
        android:id="@+id/ngl_works"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_2"
        android:background="@color/color_ffffff"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:paddingTop="@dimen/px_24"
        android:visibility="gone"
        app:imgGap="@dimen/px_6"
        app:showStyle="grid"
        app:singleImgSize="@dimen/px_1000" />
</com.zhy.autolayout.AutoLinearLayout>