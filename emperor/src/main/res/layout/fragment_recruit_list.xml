<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f4">

    <com.wktx.www.emperor.widget.DropDownMenu
        android:id="@+id/dropDownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ddmenuTextSize="@dimen/sp_15"
        app:ddtextSelectedColor="@color/color_ffb321"
        app:ddtextUnselectedColor="@color/color_5d5d5d"
        app:ddmenuSelectedIcon="@drawable/down_pull_selected"
        app:ddmenuUnselectedIcon="@drawable/down_pull_normal"
        app:ddmaskColor="@color/mask_color"
        app:ddmenuBackgroundColor="@color/color_f7f7f7"
        app:ddunderlineColor="@color/gray"
        app:dddividerColor="@color/gray"
        app:dddividerHeight="@dimen/px_20"
        app:ddmenuIconOrientation="right">
    </com.wktx.www.emperor.widget.DropDownMenu>

    <ImageView
        android:id="@+id/iv_browsingHistory"
        android:layout_width="@dimen/px_82"
        android:layout_height="@dimen/px_82"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/px_50"
        android:layout_marginRight="@dimen/px_30"
        android:src="@drawable/browsinghistory" />
</com.zhy.autolayout.AutoRelativeLayout>