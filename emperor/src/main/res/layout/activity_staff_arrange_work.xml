<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_f0f0f0"
    tools:context="com.wktx.www.emperor.com.wktx.www.emperor.Activity.StaffArrangeWorkActivity">

    <include layout="@layout/include_toolbar_activity" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_fourteen"
            android:paddingRight="@dimen/dp_fourteen"
            android:text="需求标题"
            android:textColor="@color/title_gray_5d"
            android:textSize="@dimen/sp_twelve" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_white"
            android:gravity="center_vertical"
            android:hint="如整店装修"
            android:minHeight="36dp"
            android:paddingLeft="@dimen/dp_fourteen"
            android:paddingRight="@dimen/dp_fourteen"
            android:textColor="@color/title_color_gray"
            android:textSize="@dimen/sp_fourteen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_fourteen"
            android:paddingRight="@dimen/dp_fourteen"
            android:text="需求详情"
            android:textColor="@color/title_gray_5d"
            android:textSize="@dimen/sp_twelve" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_white"
            android:gravity="top|left"
            android:hint="如填写您的具体需求"
            android:minHeight="107dp"
            android:paddingBottom="@dimen/dp_ten"
            android:paddingLeft="@dimen/dp_fourteen"
            android:paddingRight="@dimen/dp_fourteen"
            android:paddingTop="@dimen/dp_ten"
            android:textColor="@color/title_color_gray"
            android:textSize="@dimen/sp_fourteen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_fourteen"
            android:paddingRight="@dimen/dp_fourteen"
            android:text="店铺信息"
            android:textColor="@color/title_gray_5d"
            android:textSize="@dimen/sp_twelve" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/main_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_fifteen"
            android:paddingRight="@dimen/dp_fifteen">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="母婴玩具旗舰店"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_thirteen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="点击绑定"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="1dp"
            android:background="@color/main_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_fifteen"
            android:paddingRight="@dimen/dp_fifteen">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="截止日期"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_thirteen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="2017-10-24"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_thirteen"/>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/addDemandTvSubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_fifty"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="确定发布"
        android:textColor="@color/main_white"
        android:textSize="@dimen/sp_sixteen" />
</LinearLayout>
