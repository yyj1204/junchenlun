<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="@dimen/px_10"
    android:background="@drawable/selector_mine_linearlayout"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_worksImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_320"
            android:padding="@dimen/px_10"
            android:scaleType="fitXY"
            android:src="@drawable/recruit3" />

        <TextView
            android:id="@+id/tv_worksTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_64"
            android:fontFamily="sans-serif-condensed"
            android:padding="@dimen/px_10"
            android:gravity="center"
            android:text="作品标题"
            android:singleLine="true"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13" />
</com.zhy.autolayout.AutoLinearLayout>

