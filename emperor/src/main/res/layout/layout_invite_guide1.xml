<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/color_ffffff"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:textSize="20sp"
            android:background="@drawable/ic_inviteguide_tag"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选人面试"
            android:textStyle="bold"
            android:layout_marginLeft="17dp"
            android:textColor="@color/color_000000"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浏览简历，直接面试"
            android:layout_marginLeft="7dp"
            android:textColor="@color/color_999999"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="13dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="30px">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_inviteguide1_zpyg"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/color_000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="招聘员工"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="  根据行业筛选"
                android:textSize="12sp"
                android:layout_marginLeft="23dp"
                android:drawableLeft="@drawable/ic_inviteguide_circle"
                android:textColor="@color/color_999999"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="  根据性别筛选"
                android:textSize="12sp"
                android:layout_marginLeft="23dp"
                android:drawableLeft="@drawable/ic_inviteguide_circle"
                android:textColor="@color/color_999999"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="  根据预算筛选"
                android:textSize="12sp"
                android:layout_marginLeft="23dp"
                android:drawableLeft="@drawable/ic_inviteguide_circle"
                android:textColor="@color/color_999999"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="  根据工作经验筛选"
                android:textSize="12sp"
                android:layout_marginLeft="23dp"
                android:drawableLeft="@drawable/ic_inviteguide_circle"
                android:textColor="@color/color_999999"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_inviteguide1_ckjl"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/color_000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="查看简历"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="  员工个人简历"
                android:textSize="12sp"
                android:layout_marginLeft="23dp"
                android:drawableLeft="@drawable/ic_inviteguide_circle"
                android:textColor="@color/color_999999"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="  员工作品/介绍"
                android:textSize="12sp"
                android:layout_marginLeft="23dp"
                android:drawableLeft="@drawable/ic_inviteguide_circle"
                android:textColor="@color/color_999999"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="  员工项目经历"
                android:textSize="12sp"
                android:layout_marginLeft="23dp"
                android:drawableLeft="@drawable/ic_inviteguide_circle"
                android:textColor="@color/color_999999"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="  雇主以往评价"
                android:textSize="12sp"
                android:layout_marginLeft="23dp"
                android:drawableLeft="@drawable/ic_inviteguide_circle"
                android:textColor="@color/color_999999"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f0f0f0"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="13dp"
        android:paddingLeft="30px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_inviteguide1_msyg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:textColor="@color/color_000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="面试员工"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="  QQ/微信在线面试"
            android:textSize="12sp"
            android:layout_marginLeft="23dp"
            android:drawableLeft="@drawable/ic_inviteguide_circle"
            android:textColor="@color/color_999999"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="  手机/电话面试"
            android:textSize="12sp"
            android:layout_marginLeft="23dp"
            android:drawableLeft="@drawable/ic_inviteguide_circle"
            android:textColor="@color/color_999999"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="  APP直接沟通"
            android:textSize="12sp"
            android:layout_marginLeft="23dp"
            android:drawableLeft="@drawable/ic_inviteguide_circle"
            android:textColor="@color/color_999999"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="  在线视频面试"
            android:textSize="12sp"
            android:layout_marginLeft="23dp"
            android:drawableLeft="@drawable/ic_inviteguide_circle"
            android:textColor="@color/color_999999"/>
    </LinearLayout>
</LinearLayout>