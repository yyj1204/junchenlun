<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/set_act_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar_activity" />

    <LinearLayout
        android:id="@+id/upStoreLlPlatform"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_fourty_three"
        android:layout_gravity="center_vertical"
        android:background="@color/main_white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_fifteen"
        android:paddingRight="@dimen/dp_fifteen">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="选择平台"
            android:textColor="@color/title_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/upstoreTvPlatfrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_thirteen"
            android:textColor="@color/title_color_gray"/>
        <ImageView
            android:id="@+id/myaccount_photo_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_fifteen"
            android:src="@drawable/arrow_right_gray" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/upStoreLlSort"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_fourty_three"
        android:background="@color/main_white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_fifteen"
        android:paddingRight="@dimen/dp_fifteen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="选择类目："
            android:textColor="@color/title_color"
            android:textSize="@dimen/sp_fourteen" />
        <TextView
            android:id="@+id/upstoreTvSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_thirteen"
            android:textColor="@color/title_color_gray"/>
        <ImageView
            android:id="@+id/myaccount_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_fifteen"
            android:src="@drawable/arrow_right_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/accountLlSex"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_fourty_three"
        android:layout_marginTop="@dimen/dp_one"
        android:background="@color/main_white"
        android:clickable="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_fifteen"
        android:paddingRight="@dimen/dp_fifteen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="店铺名称:"
            android:textColor="@color/title_color"
            android:textSize="@dimen/sp_fourteen" />

        <EditText
            android:id="@+id/accountTvSex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="如：上海童婴家具店"
            android:textColor="@color/title_color_gray"
            android:background="@null"
            android:textSize="@dimen/sp_fourteen" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/accountLlSex1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_fourty_three"
        android:layout_marginTop="@dimen/dp_one"
        android:background="@color/main_white"
        android:clickable="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_fifteen"
        android:paddingRight="@dimen/dp_fifteen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="网址:"
            android:textColor="@color/title_color"
            android:textSize="@dimen/sp_fourteen" />

        <EditText
            android:id="@+id/accountTvSex1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="www.taobao.com"
            android:textColor="@color/title_color_gray"
            android:background="@null"
            android:textSize="@dimen/sp_fourteen" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login_out"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_sixteen"
        android:layout_marginRight="@dimen/dp_sixteen"
        android:layout_marginTop="@dimen/dp_fifty"
        android:background="@drawable/shape_submit_unselect"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/main_white"
        android:textSize="@dimen/sp_fifteen" />
</LinearLayout>