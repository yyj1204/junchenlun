<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_f0f0f0"
    tools:context="com.wktx.www.emperor.ui.activity.recruit.hire.TrusteeshipSalaryActivity">

    <include layout="@layout/include_toolbar_activity" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="@dimen/px_90"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:padding="@dimen/px_30"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_width="@dimen/px_106"
                    android:layout_height="@dimen/px_106"
                    android:src="@drawable/img_mine_head" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_16"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_staffName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="姓名"
                            android:textStyle="bold"
                            android:textColor="@color/color_000000"
                            android:textSize="@dimen/sp_15" />
                        <TextView
                            android:id="@+id/tv_workYears"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0年"
                            android:textColor="@color/color_000000"
                            android:layout_marginLeft="@dimen/px_18"
                            android:background="@drawable/shape_buttom_ffb321_18"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/px_14"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_category"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="擅长类目"
                            android:singleLine="true"
                            android:textColor="@color/color_000000"
                            android:textSize="@dimen/sp_12" />
                        <TextView
                            android:id="@+id/tv_hireType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="雇佣方式"
                            android:layout_marginLeft="@dimen/px_15"
                            android:textColor="@color/color_000000"
                            android:textSize="@dimen/sp_13"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/px_20"
                android:padding="@dimen/px_30"
                android:gravity="center_vertical"
                android:background="@color/color_ffffff">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="雇佣周期："
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_a0a0a0"/>
                <TextView
                    android:id="@+id/tv_hireTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/px_1"
                android:padding="@dimen/px_30"
                android:gravity="center_vertical"
                android:background="@color/color_ffffff">
                <TextView
                    android:id="@+id/tv_beginTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/color_000000"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_orders_arrows"/>
                <TextView
                    android:id="@+id/tv_endTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/color_000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/px_1"
                android:padding="@dimen/px_30"
                android:gravity="center_vertical"
                android:background="@color/color_ffffff">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="雇佣金额："
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_a0a0a0"/>
                <TextView
                    android:id="@+id/tv_hireMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_000000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_balanceMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/px_1"
                android:padding="@dimen/px_30"
                android:gravity="center_vertical"
                android:background="@color/color_ffffff">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="使用余额："
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_a0a0a0"/>
                <TextView
                    android:id="@+id/tv_balanceMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_000000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_couponMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/px_1"
                android:padding="@dimen/px_30"
                android:gravity="center_vertical"
                android:background="@color/color_ffffff">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="优惠券金额："
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_a0a0a0"/>
                <TextView
                    android:id="@+id/tv_couponMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_000000"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_payWay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:layout_marginBottom="@dimen/px_20"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/px_30"
                    android:gravity="center_vertical"
                    android:background="@color/color_ffffff">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="待支付金额："
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_a0a0a0"/>
                    <TextView
                        android:id="@+id/tv_payMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_fa716f"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/px_30"
                    android:layout_marginTop="@dimen/px_20"
                    android:background="@color/color_ffffff"
                    android:gravity="center_vertical"
                    android:text="选择支付方式"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_15" />
                <RelativeLayout
                    android:id="@+id/rela_alipay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/px_1"
                    android:padding="@dimen/px_30">
                    <ImageView
                        android:id="@+id/iv_alipay"
                        android:layout_width="@dimen/px_48"
                        android:layout_height="@dimen/px_48"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_pay_alipay" />
                    <TextView
                        android:id="@+id/tv_alipay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_alipay"
                        android:paddingLeft="@dimen/px_14"
                        android:text="支付宝"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_13" />
                    <ImageView
                        android:id="@+id/iv_selectedAlipay"
                        android:layout_width="@dimen/px_40"
                        android:layout_height="@dimen/px_40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/selector_radiobutton" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rela_wechat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/px_1"
                    android:padding="@dimen/px_30">
                    <ImageView
                        android:id="@+id/iv_wechat"
                        android:layout_width="@dimen/px_48"
                        android:layout_height="@dimen/px_48"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_pay_wechat" />
                    <TextView
                        android:id="@+id/tv_wechat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_wechat"
                        android:paddingLeft="@dimen/px_14"
                        android:text="微信"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_13" />
                    <ImageView
                        android:id="@+id/iv_selectedWechat"
                        android:layout_width="@dimen/px_40"
                        android:layout_height="@dimen/px_40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/selector_radiobutton" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_surePay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_submit_selected"
        android:gravity="center"
        android:text="确定支付"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_15" />

</RelativeLayout>
