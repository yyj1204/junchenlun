<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_worksTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_000000"
        android:layout_marginTop="@dimen/px_60"
        android:text="作品标题"/>

    <TextView
        android:id="@+id/tv_worksTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_20"
        android:text="作品标签"
        android:textColor="@color/color_999999"
        android:drawableLeft="@drawable/ic_worksdetails_tag"
        android:drawablePadding="@dimen/px_10"
        android:textSize="@dimen/sp_13" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/color_f0f0f0"
        android:layout_marginTop="@dimen/px_26"/>

    <TextView
        android:id="@+id/tv_worksContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_13"
        android:layout_marginTop="@dimen/px_30"
        android:layout_marginBottom="@dimen/px_30"
        android:textColor="@color/color_999999"
        android:text="作品内容"/>
</com.zhy.autolayout.AutoLinearLayout>