<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_f0f0f0"
    tools:context="com.wktx.www.emperor.com.wktx.www.emperor.Activity.StaffRenewActivity">

    <include layout="@layout/include_toolbar_activity" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/color_ffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_staff_head"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_head_woman" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_state"
                android:layout_width="42dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:src="@drawable/employ_cooperation"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="员工姓名："
                    android:textColor="@color/color_a0a0a0"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/tv_staff_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="胡图图"
                    android:textColor="@color/title_color"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_staff_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="美工"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/dp_ten"
                    android:background="@drawable/shape_stroke_yellow_eight"
                    android:textSize="@dimen/sp_twelve" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="雇佣时间："
                    android:textColor="@color/color_a0a0a0"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_staff_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017.10.16—2017.11.15"
                    android:textColor="@color/title_color"
                    android:layout_marginLeft="@dimen/dp_ten"
                    android:textSize="12dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal"
        android:background="@color/color_ffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="续签时间："
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="@color/color_a0a0a0"/>

        <RelativeLayout
            android:id="@+id/rela_renew_minus"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/shape_stroke_888888_1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_staff_minus"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_renew_month"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/color_000000"
            android:textSize="13sp"
            android:background="@drawable/shape_stroke_888888_1"/>

        <RelativeLayout
            android:id="@+id/rela_renew_add"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/shape_stroke_888888_1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_staff_add"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月"
            android:layout_marginLeft="8dp"
            android:textColor="@color/color_000000"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal"
        android:background="@color/color_ffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="续签金额："
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="@color/color_a0a0a0"/>

        <EditText
            android:id="@+id/et_renew_money"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:hint="请输入金额"
            android:textColor="@color/color_000000"
            android:textSize="13sp"
            android:background="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:layout_marginLeft="8dp"
            android:textColor="@color/color_000000"
            android:textSize="13sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="vertical"
        android:background="@color/color_ffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提成方案："
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="@color/color_a0a0a0"/>

            <EditText
                android:id="@+id/et_renew_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="请输入分成"
                android:textColor="@color/color_000000"
                android:textSize="13sp"
                android:background="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:layout_marginLeft="8dp"
                android:textColor="@color/color_000000"
                android:textSize="13sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="@color/color_a0a0a0"
            android:text="请输入您跟客服约定好的业绩分成"/>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="218dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/color_ffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="雇佣总金额："
                android:textSize="15sp"
                android:textColor="@color/color_000000" />
            <TextView
                android:id="@+id/tv_renew_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="15sp"
                android:textColor="@color/color_fa716f" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_renew"
            android:layout_width="142dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@color/color_ffb321"
            android:textColor="@color/color_000000"
            android:layout_height="match_parent"
            android:text="确认续签"/>
    </LinearLayout>

</LinearLayout>
