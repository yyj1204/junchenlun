<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_tui_huan_huo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_f0f0f0">

    <include layout="@layout/include_toolbar_activity" />

    <LinearLayout
        android:id="@+id/linear_QQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_mine_linearlayout"
        android:gravity="center_vertical"
        android:padding="@dimen/px_30">
        <ImageView
            android:layout_width="@dimen/px_66"
            android:layout_height="@dimen/px_74"
            android:src="@drawable/ic_service_qq"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线客服"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:id="@+id/tv_QQNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_16"
                android:textColor="@color/color_ffb321"
                android:singleLine="true"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_serviceTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_gravity="bottom"
            android:textColor="@color/color_999999"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_mine_linearlayout"
        android:gravity="center_vertical"
        android:padding="@dimen/px_30"
        android:layout_marginTop="@dimen/px_14">
        <ImageView
            android:layout_width="@dimen/px_66"
            android:layout_height="@dimen/px_74"
            android:src="@drawable/ic_service_phone"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话客服"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:id="@+id/tv_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_16"
                android:textColor="@color/color_ffb321"
                android:singleLine="true"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_serviceTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_gravity="bottom"
            android:textColor="@color/color_999999"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_62"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:background="@color/color_f0f0f0"
        android:gravity="center_vertical"
        android:text="留言内容"
        android:textColor="@color/color_5d5d5d"
        android:textSize="@dimen/sp_12" />
    <EditText
        android:id="@+id/et_messageContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_214"
        android:paddingTop="@dimen/px_20"
        android:paddingBottom="@dimen/px_20"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:background="@color/color_ffffff"
        android:gravity="top|left"
        android:hint="您碰到的问题或对我们的建议..."
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_13" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_62"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:background="@color/color_f0f0f0"
        android:gravity="center_vertical"
        android:text="联系方式"
        android:textColor="@color/color_5d5d5d"
        android:textSize="@dimen/sp_12" />
    <EditText
        android:id="@+id/et_contactWay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_72"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:hint="以便与您联系"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_13" />

    <Button
        android:id="@+id/bt_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginTop="@dimen/px_80"
        android:background="@drawable/selector_submit_selected_10"
        android:gravity="center"
        android:text="我要留言"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_15" />
</LinearLayout>
