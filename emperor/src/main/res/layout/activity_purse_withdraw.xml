<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_purse_withdrawal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:fitsSystemWindows="true">

    <include layout="@layout/include_toolbar_activity" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_withdraw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/px_30">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_90"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:textColor="@color/color_000000"
                            android:drawableLeft="@drawable/ic_login_phone"
                            android:drawablePadding="@dimen/px_16"
                            android:maxLength="11"
                            android:textSize="@dimen/sp_14" />
                        <TextView
                            android:id="@+id/tv_getcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/px_10"
                            android:gravity="center"
                            android:text="获取验证码"
                            android:textColor="@color/color_ffb321"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_2"
                        android:background="@color/color_f2f2f2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_90"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/et_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_login_code"
                        android:drawablePadding="@dimen/px_16"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/color_000000"
                        android:textColorHint="@color/color_b2b2b2"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/sp_14" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_2"
                        android:background="@color/color_f2f2f2" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_90"
                    android:orientation="vertical" >
                    <EditText
                        android:id="@+id/et_payPwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_login_psw"
                        android:drawablePadding="@dimen/px_16"
                        android:hint="请输入支付密码"
                        android:inputType="numberPassword"
                        android:singleLine="true"
                        android:textColor="@color/color_000000"
                        android:textColorHint="@color/color_b2b2b2"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/sp_14" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_2"
                        android:background="@color/color_f2f2f2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_90"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/et_alipayNume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_login_phone"
                        android:drawablePadding="@dimen/px_16"
                        android:hint="请输入认证的支付宝账号"
                        android:singleLine="true"
                        android:textColor="@color/color_000000"
                        android:textColorHint="@color/color_b2b2b2"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/sp_14" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_2"
                        android:background="@color/color_f2f2f2" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_90"
                    android:orientation="vertical" >
                    <EditText
                        android:id="@+id/et_idNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_login_account"
                        android:drawablePadding="@dimen/px_16"
                        android:hint="请输入认证的身份证号/信用代码"
                        android:singleLine="true"
                        android:textColor="@color/color_000000"
                        android:textColorHint="@color/color_b2b2b2"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/sp_14" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_2"
                        android:background="@color/color_f2f2f2" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="提现金额"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/px_30"
                    android:drawableLeft="@drawable/ic_pay_alipay"
                    android:drawablePadding="@dimen/px_16"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_15" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_72"
                    android:layout_marginTop="@dimen/px_30">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="￥"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_20" />
                    <EditText
                        android:id="@+id/et_withdrawal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textSize="@dimen/sp_20"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:maxLength="20"
                        android:gravity="center_vertical|left"
                        android:hint="请输入提现金额"
                        android:textColor="@color/color_ffb321"
                        android:layout_marginLeft="@dimen/px_14" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/color_f0f0f0"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_20">
                    <TextView
                        android:id="@+id/tv_withdrawalMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_999999"
                        android:text="余额￥0.00 "/>
                    <TextView
                        android:id="@+id/tv_withdrawalAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_08aaeb"
                        android:layout_marginLeft="@dimen/px_20"
                        android:text="全部提现"/>
                </LinearLayout>

                <Button
                    android:id="@+id/bt_withdrawal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_90"
                    android:layout_marginTop="@dimen/px_100"
                    android:background="@drawable/selector_submit_selected_10"
                    android:gravity="center"
                    android:text="提现"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/sp_15"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_30"
                    android:gravity="center"
                    android:text="请认真填写以上信息，以便客服审核"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_b2b2b2"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linear_withdraw_success"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:padding="@dimen/px_30"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/px_200"
                    android:layout_height="@dimen/px_200"
                    android:layout_marginTop="@dimen/px_100"
                    app:srcCompat="@drawable/img_pay_success" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现申请成功"
                    android:layout_marginTop="@dimen/px_30"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/color_000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现将在1~7个工作日内到账"
                    android:layout_marginTop="@dimen/px_30"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_b2b2b2"/>

                <Button
                    android:id="@+id/bt_sure"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_90"
                    android:layout_marginTop="@dimen/px_100"
                    android:background="@drawable/selector_submit_selected_10"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/sp_15"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
