<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white"
    android:orientation="horizontal"
    android:paddingBottom="18dp"
    android:paddingLeft="@dimen/dp_fifteen"
    android:paddingRight="@dimen/dp_fifteen">

    <ImageView
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginTop="21dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_head_woman" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_ten"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="21dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hzTvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="胡图图"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_sixteen" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="@dimen/dp_ten"
                android:src="@drawable/icon_sex_woman" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_ten"
                android:background="@drawable/shape_buttom_nine"
                android:text="1年"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_twelve" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_twelve"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/time"
                android:drawablePadding="@dimen/dp_eight"
                android:gravity="center"
                android:text="一年以上"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_thirteen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_thirty"
                android:drawableLeft="@drawable/adress"
                android:drawablePadding="@dimen/dp_eight"
                android:gravity="center"
                android:text="福建-泉州-丰泽区"
                android:textColor="@color/title_color_gray"
                android:textSize="@dimen/sp_thirteen" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_twelve"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="13dp"
                android:src="@drawable/specialty" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_ten"
                android:text="日韩小清新/中国风/时尚简约"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_thirteen" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_twelve"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|bottom"
                android:text="￥"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_ten"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_three"
                android:text="3500元/月"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_sixteen"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>