<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dp_fifteen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableLeft="@drawable/demand"
        android:drawablePadding="@dimen/dp_seven"
        android:gravity="center_vertical"
        android:text="@string/title_add_demand"
        android:textColor="@color/title_color"
        android:textSize="@dimen/sp_thirteen" />

    <ImageView
        android:layout_width="@dimen/dp_eight"
        android:layout_height="@dimen/dp_ten"
        android:src="@drawable/arrow_right_gray" />
</LinearLayout>