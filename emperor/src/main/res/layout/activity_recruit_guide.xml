<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_f0f0f0"
    tools:context="com.wktx.www.emperor.ui.activity.main.RecruitGuideActivity">

    <include layout="@layout/include_toolbar_activity" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_inviteguid_banner" />

            <include layout="@layout/layout_recruit_guide1"/>
            <include layout="@layout/layout_recruit_guide2"/>
            <include layout="@layout/layout_recruit_guide3"/>
            <include layout="@layout/layout_recruit_guide4"/>
            <include layout="@layout/layout_recruit_guide5"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
