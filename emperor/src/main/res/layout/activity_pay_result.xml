<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    tools:context="com.wktx.www.emperor.com.wktx.www.emperor.Activity.PayResultActivity">

    <include layout="@layout/include_toolbar_activity" />

    <LinearLayout
        android:id="@+id/linear_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_pay_success"
            android:layout_marginTop="32dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付成功"
            android:textSize="18sp"
            android:textColor="@color/color_000000"
            android:layout_marginTop="27dp"/>
        <TextView
            android:id="@+id/tv_pay_finish"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="完成"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:background="@drawable/shape_buttom_ffb321_10"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_failure"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_pay_failure"
            android:layout_marginTop="32dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付失败"
            android:textSize="18sp"
            android:textColor="@color/color_000000"
            android:layout_marginTop="27dp"/>
        <TextView
            android:id="@+id/tv_pay_again"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="重新支付"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:background="@drawable/shape_buttom_ffb321_10"/>
        <TextView
            android:id="@+id/tv_pay_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="取消支付"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:background="@drawable/shape_buttom_e1e1e1_10"/>
    </LinearLayout>

</LinearLayout>
