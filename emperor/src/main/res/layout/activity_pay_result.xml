<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    tools:context="com.wktx.www.emperor.ui.activity.recruit.hire.PayResultActivity">

    <include layout="@layout/include_toolbar_activity" />

    <LinearLayout
        android:id="@+id/linear_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/px_192"
            android:layout_height="@dimen/px_192"
            android:src="@drawable/img_pay_success"
            android:layout_marginTop="@dimen/px_64"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_50"
            android:text="支付成功"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/color_000000"
            android:layout_marginTop="@dimen/px_54"/>
        <Button
            android:id="@+id/bt_paySuccess"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_90"
            android:layout_margin="@dimen/px_30"
            android:background="@drawable/selector_submit_selected_10"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_failure"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/px_192"
            android:layout_height="@dimen/px_192"
            android:src="@drawable/img_pay_failure"
            android:layout_marginTop="@dimen/px_64"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_50"
            android:text="支付失败"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/color_000000"
            android:layout_marginTop="@dimen/px_54"/>
        <Button
            android:id="@+id/bt_payAgain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_90"
            android:layout_margin="@dimen/px_30"
            android:background="@drawable/selector_submit_selected_10"
            android:gravity="center"
            android:text="重新支付"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_15" />
        <Button
            android:id="@+id/bt_payCancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_90"
            android:layout_margin="@dimen/px_30"
            android:background="@drawable/shape_buttom_e1e1e1_10"
            android:gravity="center"
            android:text="取消支付"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

</LinearLayout>
