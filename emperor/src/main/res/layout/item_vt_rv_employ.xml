<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white"
    android:orientation="horizontal"
    android:paddingBottom="18dp"
    android:paddingLeft="@dimen/dp_fifteen"
    android:paddingRight="@dimen/dp_fifteen">

    <ImageView
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:scaleType="fitXY"
        android:layout_marginTop="21dp"
        android:src="@drawable/icon_head_woman" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_ten"
        android:layout_marginTop="21dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hzTvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="胡图图"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_sixteen" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="@dimen/dp_ten"
                android:src="@drawable/icon_sex_woman" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美工"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/dp_ten"
                android:background="@drawable/shape_stroke_ffb321_18"
                android:layout_gravity="bottom"
                android:textSize="@dimen/sp_twelve" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_twelve"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="15dp"
                android:layout_height="13dp"
                android:src="@drawable/employ_time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017.10.16—2017.11.15"
                android:textColor="@color/title_color"
                android:layout_marginLeft="@dimen/dp_ten"
                android:textSize="@dimen/sp_thirteen" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_twelve"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_ten"
                android:layout_weight="1"
                android:gravity="right|bottom"
                android:textStyle="bold"
                android:textColor="@color/title_color"
                android:text="￥"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_sixteen"
                android:layout_marginLeft="@dimen/dp_three"
                android:textStyle="bold"
                android:text="3500元"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="托管中"
                android:textColor="@color/title_color_gray"
                android:layout_marginLeft="@dimen/dp_ten"
                android:textSize="@dimen/sp_thirteen" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/employIvState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/employ_cooperation" />
</LinearLayout>