<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="18dp"
    android:paddingLeft="@dimen/dp_fifteen"
    android:paddingRight="@dimen/dp_fifteen"
    android:paddingTop="21dp"
    android:background="@color/main_white"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_head_woman" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_ten"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hzTvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="胡图图"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_sixteen" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="@dimen/dp_ten"
                android:src="@drawable/ic_sex_woman" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_ten"
                android:background="@drawable/shape_buttom_ffb321_18"
                android:text="1年"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_twelve" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|bottom"
                android:text="￥"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_ten"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_three"
                android:text="3500元"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_sixteen"
                android:textStyle="bold" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_fifteen"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="擅长类目："
                android:textColor="@color/title_color_gray"
                android:textSize="@dimen/sp_thirteen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服装内衣/母婴用品、生活百货"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_thirteen" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_ten"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="擅长风格："
                android:textColor="@color/title_color_gray"
                android:textSize="@dimen/sp_thirteen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日韩小清新/中国风/时尚简约"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_thirteen" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>