<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_f0f0f0"
    tools:context="com.wktx.www.emperor.ui.activity.staff.StaffComplaintActivity">

    <include layout="@layout/include_toolbar_activity" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_62"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:background="@color/color_f0f0f0"
        android:gravity="center_vertical"
        android:text="投诉问题"
        android:textColor="@color/color_5d5d5d"
        android:textSize="@dimen/sp_12" />
    <EditText
        android:id="@+id/et_complaintQuestion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_72"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:hint="请填写问题"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_14" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_62"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:background="@color/color_f0f0f0"
        android:gravity="center_vertical"
        android:text="投诉原因"
        android:textColor="@color/color_5d5d5d"
        android:textSize="@dimen/sp_12" />
    <EditText
        android:id="@+id/et_complaintContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_214"
        android:paddingTop="@dimen/px_20"
        android:paddingBottom="@dimen/px_20"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:background="@color/color_ffffff"
        android:gravity="top|left"
        android:hint="请描述具体内容"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_14" />
    <Button
        android:id="@+id/bt_sureComplaint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginTop="@dimen/px_80"
        android:background="@drawable/selector_submit_selected_10"
        android:gravity="center"
        android:text="确定投诉"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_15" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/px_30"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_999999"
        android:text="@string/string_complaint_hint"/>
</LinearLayout>
