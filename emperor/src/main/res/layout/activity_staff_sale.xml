<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_f0f0f0"
    tools:context="com.wktx.www.emperor.Activity.StaffSaleActivity">

    <include layout="@layout/include_toolbar_activity" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="全部"
            android:gravity="center"
            android:textColor="@color/title_gray_5d"
            android:background="@color/white"
            android:drawableRight="@drawable/selector_pull_down"
            android:drawablePadding="@dimen/dp_ten" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="21dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计销售总额"
                android:textColor="@color/color_000000"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_sale_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1266"
                android:layout_marginTop="9dp"
                android:textColor="@color/color_fa716f"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="21dp"
            android:layout_marginLeft="2dp"
            android:orientation="vertical"
            android:background="@color/color_ffffff"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上月销售额"
                android:textColor="@color/color_000000"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_sale_lastmonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1266"
                android:layout_marginTop="9dp"
                android:textColor="@color/color_fa716f"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:gravity="center"
        android:text="上月销售额数据"
        android:textColor="@color/color_000000"
        android:textSize="13sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:background="@color/color_ffffff"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

    </RelativeLayout>

</LinearLayout>
