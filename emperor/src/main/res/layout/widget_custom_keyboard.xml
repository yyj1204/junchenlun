<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rela_hide"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:gravity="center"
        android:background="@drawable/selector_mine_linearlayout"
        android:tag="hide">
        <ImageView
            android:layout_width="60px"
            android:layout_height="40px"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_keyboard_hide"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/px_1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_keyboard1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:background="@drawable/selector_mine_linearlayout"
            android:gravity="center"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_24"
            android:tag="1"/>
        <TextView
            android:id="@+id/tv_keyboard2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/px_1"
            android:layout_marginRight="@dimen/px_1"
            android:text="2"
            android:background="@drawable/selector_mine_linearlayout"
            android:gravity="center"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_24"
            android:tag="2"/>
        <TextView
            android:id="@+id/tv_keyboard3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:background="@drawable/selector_mine_linearlayout"
            android:gravity="center"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_24"
            android:tag="3"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/px_1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_keyboard4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:background="@drawable/selector_mine_linearlayout"
            android:gravity="center"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_24"
            android:tag="4"/>
        <TextView
            android:id="@+id/tv_keyboard5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/px_1"
            android:layout_marginRight="@dimen/px_1"
            android:text="5"
            android:background="@drawable/selector_mine_linearlayout"
            android:gravity="center"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_24"
            android:tag="5"/>
        <TextView
            android:id="@+id/tv_keyboard6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:background="@drawable/selector_mine_linearlayout"
            android:gravity="center"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_24"
            android:tag="6"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/px_1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_keyboard7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:background="@drawable/selector_mine_linearlayout"
            android:gravity="center"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_24"
            android:tag="7"/>
        <TextView
            android:id="@+id/tv_keyboard8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/px_1"
            android:layout_marginRight="@dimen/px_1"
            android:text="8"
            android:background="@drawable/selector_mine_linearlayout"
            android:gravity="center"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_24"
            android:tag="8"/>
        <TextView
            android:id="@+id/tv_keyboard9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:background="@drawable/selector_mine_linearlayout"
            android:gravity="center"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_24"
            android:tag="9"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/px_1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_keyboard0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginRight="@dimen/px_1"
            android:text="0"
            android:background="@drawable/selector_mine_linearlayout"
            android:gravity="center"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_24"
            android:tag="0"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rela_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/selector_mine_linearlayout"
            android:tag="delete">
            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_keyboard_delete"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>