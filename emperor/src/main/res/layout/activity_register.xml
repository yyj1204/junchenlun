<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_regiest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.login.RegisterActivity">

    <include layout="@layout/include_toolbar_activity" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_100"
        android:layout_marginBottom="@dimen/px_60"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login_theory" />

    <LinearLayout
        android:id="@+id/regiestLyName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:layout_marginLeft="@dimen/px_60"
        android:layout_marginRight="@dimen/px_60"
        android:layout_below="@+id/image"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/login_account"
                android:drawablePadding="@dimen/px_16"
                android:hint="请输入手机号码"
                android:inputType="phone"
                android:singleLine="true"
                android:maxLength="11"
                android:textColorHint="@color/color_b2b2b2"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/tv_getcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_10"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/color_ffb321"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:background="@color/color_f2f2f2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/regiestLyYzm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:layout_marginTop="@dimen/px_2"
        android:layout_alignLeft="@+id/regiestLyName"
        android:layout_alignRight="@+id/regiestLyName"
        android:layout_below="@+id/regiestLyName"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/login_code"
            android:drawablePadding="@dimen/px_16"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:singleLine="true"
            android:textColorHint="@color/color_b2b2b2"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/sp_14" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:background="@color/color_f2f2f2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/regiestLyPswOne"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:layout_alignLeft="@+id/regiestLyName"
        android:layout_alignRight="@+id/regiestLyName"
        android:layout_below="@+id/regiestLyYzm"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_pwd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/px_5"
            android:background="@null"
            android:drawableLeft="@drawable/login_psw"
            android:drawablePadding="@dimen/px_21"
            android:hint="请输入密码(6-12位数字、字母)"
            android:singleLine="true"
            android:inputType="textPassword"
            android:digits="@string/string_pwd"
            android:textColorHint="@color/color_b2b2b2"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/sp_14" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:background="@color/color_f2f2f2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/regiestLyPswTwo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:layout_alignLeft="@+id/regiestLyName"
        android:layout_alignRight="@+id/regiestLyName"
        android:layout_below="@+id/regiestLyPswOne"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_pwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/px_5"
            android:background="@null"
            android:drawableLeft="@drawable/login_psw"
            android:drawablePadding="@dimen/px_21"
            android:hint="再次输入密码"
            android:singleLine="true"
            android:inputType="textPassword"
            android:digits="@string/string_pwd"
            android:textColorHint="@color/color_b2b2b2"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/sp_14" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:background="@color/color_f2f2f2" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:layout_marginTop="@dimen/px_80"
        android:layout_alignLeft="@+id/regiestLyPswTwo"
        android:layout_alignRight="@+id/regiestLyPswTwo"
        android:layout_below="@+id/regiestLyPswTwo"
        android:background="@drawable/selector_submit_selected_10"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_15" />

    <LinearLayout
        android:id="@+id/linear_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_44"
        android:layout_below="@+id/bt_register"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_24"
            android:text="已有账号，立即登录"
            android:textColor="@color/color_888888"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>

</RelativeLayout>
