<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_pay_way"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <include layout="@layout/include_toolbar_activity" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="@color/main_white"
        android:orientation="vertical"
        android:padding="@dimen/dp_fifteen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值金额"
            android:textColor="@color/title_color"
            android:textSize="@dimen/sp_thirteen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginTop="@dimen/dp_seventeen">
            <TextView
                android:id="@+id/payWayTvPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="￥"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_twenty_three" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="@dimen/sp_twenty_three"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/dp_fifteen"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView56"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:background="@color/main_white"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_ten"
        android:paddingBottom="@dimen/dp_ten"
        android:paddingLeft="@dimen/dp_fifteen"
        android:paddingRight="@dimen/dp_fifteen"
        android:text="选择支付方式"
        android:layout_marginTop="@dimen/dp_ten"
        android:textColor="@color/title_color_gray"
        android:textSize="@dimen/sp_fifteen" />

    <RelativeLayout
        android:id="@+id/paywayRlAliPay"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView56"
        android:background="@color/main_white"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_one"
        android:paddingTop="@dimen/dp_ten"
        android:paddingBottom="@dimen/dp_ten"
        android:paddingLeft="@dimen/dp_fifteen"
        android:paddingRight="@dimen/dp_fifteen">

        <ImageView
            android:id="@+id/imageViewfff31"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            app:srcCompat="@drawable/ali_pay" />

        <TextView
            android:id="@+id/textVigggew57"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageViewfff31"
            android:layout_weight="1"
            android:paddingLeft="18px"
            android:text="支付宝支付"
            android:textColor="@color/title_color"
            android:textSize="@dimen/sp_thirteen" />

        <ImageView
            android:id="@+id/img_Ali"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="chooseZhifubao"
            app:srcCompat="@drawable/selector_radiobutton" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/paywayRlWxPay"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/paywayRlAliPay"
        android:background="@color/main_white"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_one"
        android:paddingTop="@dimen/dp_ten"
        android:paddingBottom="@dimen/dp_ten"
        android:paddingLeft="@dimen/dp_fifteen"
        android:paddingRight="@dimen/dp_fifteen">

        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@drawable/weichat_pay" />

        <TextView
            android:id="@+id/textView57"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18px"
            android:layout_toRightOf="@+id/imageView31"
            android:layout_weight="1"
            android:text="微信支付"
            android:textColor="@color/title_color"
            android:textSize="@dimen/sp_thirteen" />

        <ImageView
            android:id="@+id/img_wechat"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="chooseWechat"
            app:srcCompat="@drawable/selector_radiobutton" />
    </RelativeLayout>

    <TextView
        android:id="@+id/payWayTvGoPay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_buttom_ffb321_10"
        android:layout_marginTop="@dimen/dp_hundred"
        android:layout_marginLeft="@dimen/dp_fifteen"
        android:layout_marginRight="@dimen/dp_fifteen"
        android:gravity="center"
        android:text="去支付"
        android:textColor="@color/main_white"
        android:layout_below="@+id/paywayRlWxPay"
        android:textSize="@dimen/sp_sixteen" />
</RelativeLayout>
