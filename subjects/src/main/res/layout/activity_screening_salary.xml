<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_00000000"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    tools:context=".ui.activity.main.ScreeningSalaryActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="@dimen/px_260"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_ffffff"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_96"
            android:gravity="center"
            android:text="期望薪资"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_15"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:background="@color/color_f0f0f0"
            android:layout_below="@+id/tv_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/px_30"
                android:paddingTop="@dimen/px_30"
                android:text="最低薪资 ¥"
                android:textColor="@color/color_5d5d5d"
                android:textSize="@dimen/sp_thirteen" />
            <EditText
                android:id="@+id/et_minSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_999999"
                android:layout_margin="@dimen/px_30"
                android:singleLine="true"
                android:gravity="center"
                android:background="@null"
                android:hint="请填写最低期望薪资"
                android:inputType="numberDecimal"
                android:maxLength="20"
                android:textSize="@dimen/sp_12"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_2"
                android:background="@color/color_f0f0f0" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/px_30"
                android:paddingTop="@dimen/px_30"
                android:text="最高薪资 ¥"
                android:textColor="@color/color_5d5d5d"
                android:textSize="@dimen/sp_thirteen" />
            <EditText
                android:id="@+id/et_maxSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_999999"
                android:layout_margin="@dimen/px_30"
                android:singleLine="true"
                android:gravity="center"
                android:background="@null"
                android:hint="请填写最高期望薪资"
                android:inputType="numberDecimal"
                android:maxLength="20"
                android:textSize="@dimen/sp_12"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_2"
                android:background="@color/color_f0f0f0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:background="@color/color_f0f0f0"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_15" />
            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:background="@color/color_ffb321"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
