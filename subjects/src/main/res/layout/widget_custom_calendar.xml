<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_f0f0f0">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/linear_calendar_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"
        android:gravity="center"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rela_calendar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_30">
            <ImageView
                android:id="@+id/iv_calendar_left"
                android:layout_width="@dimen/px_32"
                android:layout_height="@dimen/px_32"
                android:src="@drawable/ic_calendar_left" />
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:id="@+id/tv_calendar_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13" />
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rela_calendar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_30">
        <ImageView
            android:id="@+id/iv_calendar_right"
            android:layout_width="@dimen/px_32"
            android:layout_height="@dimen/px_32"
            android:src="@drawable/ic_calendar_right" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/linear_week_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_66"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="一"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="二"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="三"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="四"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="五"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="六"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_calendar_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_1"
        android:background="@color/color_ffffff"></android.support.v7.widget.RecyclerView>

</com.zhy.autolayout.AutoLinearLayout>