<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/color_f0f0f0"
    tools:context="com.wktx.www.subjects.ui.activity.mine.resume.ResumePositionActivity">

    <include layout="@layout/include_toolbar_activity"/>

    <LinearLayout
        android:id="@+id/linear_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/px_30"
        android:background="@drawable/selector_mine_linearlayout"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="职位类型"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_999999"
            android:hint="请选择"
            android:textSize="@dimen/sp_13" />
        <ImageView
            android:layout_width="@dimen/px_16"
            android:layout_height="@dimen/px_20"
            android:layout_marginLeft="@dimen/px_14"
            android:src="@drawable/ic_mine_arrow_right_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_1"
        android:padding="@dimen/px_30"
        android:background="@drawable/selector_mine_linearlayout"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="擅长类目"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:id="@+id/tv_category"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_999999"
            android:hint="请选择"
            android:textSize="@dimen/sp_13"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/px_15"/>
        <ImageView
            android:layout_width="@dimen/px_16"
            android:layout_height="@dimen/px_20"
            android:layout_marginLeft="@dimen/px_14"
            android:src="@drawable/ic_mine_arrow_right_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_platform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_1"
        android:padding="@dimen/px_30"
        android:background="@drawable/selector_mine_linearlayout"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="擅长平台"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:id="@+id/tv_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_999999"
            android:hint="请选择"
            android:textSize="@dimen/sp_13" />
        <ImageView
            android:layout_width="@dimen/px_16"
            android:layout_height="@dimen/px_20"
            android:layout_marginLeft="@dimen/px_14"
            android:src="@drawable/ic_mine_arrow_right_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_1"
        android:padding="@dimen/px_30"
        android:background="@drawable/selector_mine_linearlayout"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="工作经验"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:id="@+id/tv_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_999999"
            android:hint="请选择"
            android:textSize="@dimen/sp_13" />
        <ImageView
            android:layout_width="@dimen/px_16"
            android:layout_height="@dimen/px_20"
            android:layout_marginLeft="@dimen/px_14"
            android:src="@drawable/ic_mine_arrow_right_gray" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linear_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_1"
        android:padding="@dimen/px_30"
        android:background="@drawable/selector_mine_linearlayout"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="擅长风格"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:id="@+id/tv_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_999999"
            android:hint="请选择"
            android:textSize="@dimen/sp_13"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/px_15" />
        <ImageView
            android:layout_width="@dimen/px_16"
            android:layout_height="@dimen/px_20"
            android:layout_marginLeft="@dimen/px_14"
            android:src="@drawable/ic_mine_arrow_right_gray" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_speed"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/px_30"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/px_1"
        android:background="@color/color_ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="打字速度"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13"/>
        <EditText
            android:id="@+id/et_speed"
            android:layout_width="@dimen/px_420"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999999"
            android:singleLine="true"
            android:gravity="right"
            android:background="@null"
            android:hint="请填写字数"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:textSize="@dimen/sp_12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="字/分钟"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/px_14"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/px_30"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/px_1"
        android:background="@color/color_ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="薪资"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13"/>
        <EditText
            android:id="@+id/et_salary"
            android:layout_width="@dimen/px_420"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999999"
            android:singleLine="true"
            android:gravity="right"
            android:background="@null"
            android:hint="请填写期望薪资"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:textSize="@dimen/sp_12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元/月"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/px_14"/>
    </LinearLayout>


    <Button
        android:id="@+id/bt_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:layout_marginTop="@dimen/px_100"
        android:layout_marginBottom="@dimen/px_50"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:background="@drawable/selector_submit_selected_10"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_15"/>

    <Button
        android:id="@+id/bt_delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginBottom="@dimen/px_50"
        android:background="@drawable/shape_buttom_e1e1e1_10"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/sp_15"/>

</LinearLayout>
