<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_message"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.activity.main.notification.NotificationActivity">

    <include layout="@layout/include_toolbar_activity" />

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/layout_smartTab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_70"
        android:background="@color/color_f7f7f7"
        android:paddingTop="@dimen/px_20"
        app:stl_distributeEvenly="true"
        app:stl_indicatorInFront="false"
        app:stl_indicatorColor="@color/color_ffb321"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="@dimen/px_4"
        app:stl_dividerThickness="0dp"
        app:stl_underlineThickness="0dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_f0f0f0" />
</LinearLayout>
