<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/set_act_parent"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:fitsSystemWindows="true"
             android:orientation="vertical">
    <include
        layout="@layout/include_toolbar_activity"/>

    <LinearLayout
        android:id="@+id/accountLlPhoto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_sixty_three"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/dp_fifteen"
        android:paddingRight="@dimen/dp_fifteen"
        android:background="@color/main_white"
        android:clickable="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="公司LOGO"
            android:textColor="@color/title_color"
            android:textSize="15sp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/accountIvPhoto"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/mine_head"/>
        <ImageView
            android:id="@+id/myaccount_photo_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_fifteen"
            android:src="@drawable/arrow_right_gray"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
    />
    <LinearLayout
        android:id="@+id/accountLlNickName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_fourty"
        android:paddingLeft="@dimen/dp_fifteen"
        android:paddingRight="@dimen/dp_fifteen"
        android:background="@color/main_white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="公司名称："
            android:textColor="@color/title_color"
            android:textSize="@dimen/sp_fourteen"/>

        <TextView
            android:id="@+id/account_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textColor="@color/title_color_gray"
            android:textSize="@dimen/sp_fourteen"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
    />
    <LinearLayout
        android:id="@+id/accountLlAddress"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_fourty"
        android:paddingLeft="@dimen/dp_fifteen"
        android:paddingRight="@dimen/dp_fifteen"
        android:background="@color/main_white"
        android:clickable="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="地址:"
            android:textSize="@dimen/sp_fourteen"
            android:textColor="@color/title_color"/>
        <TextView
            android:id="@+id/accountTvAddress"
            android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="福建省 泉州市 丰泽区"
                  android:textColor="@color/title_color_gray"
                  android:textSize="@dimen/sp_fourteen"/>
        <ImageView
            android:id="@+id/myaccount_photo_hint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_fifteen"
            android:src="@drawable/arrow_right_gray"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="公司简介"
        android:paddingLeft="@dimen/dp_fifteen"
        android:gravity="center_vertical"
        android:textSize="@dimen/sp_thirteen"
        android:textColor="@color/title_color"
        android:background="@color/white"/>
     <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/main_white"
         android:hint="请填写公司介绍"
         android:textSize="@dimen/sp_thirteen"
         android:paddingLeft="@dimen/dp_fifteen"
         android:paddingRight="@dimen/dp_fifteen"
         android:paddingBottom="@dimen/dp_ten"
         android:paddingTop="@dimen/dp_ten"
         android:gravity="top|left"
         android:textColor="@color/title_color_gray"
         android:minLines="8"/>
    <Button
        android:id="@+id/btn_login_out"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:background="@drawable/submit_shape_unselect"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/main_white"
        android:layout_marginLeft="@dimen/dp_sixteen"
        android:layout_marginRight="@dimen/dp_sixteen"
        android:layout_marginTop="@dimen/dp_fifty"
        android:textSize="@dimen/sp_fifteen"/>
</LinearLayout>