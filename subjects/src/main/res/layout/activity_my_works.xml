<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_f0f0f0"
    tools:context=".ui.activity.mine.works.MyWorksActivity">

    <include layout="@layout/include_toolbar_activity" />

    <LinearLayout
        android:id="@+id/linear_addWorks"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/selector_mine_linearlayout" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_resume_add"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="上传作品"
            android:layout_marginLeft="@dimen/px_20"
            android:textColor="@color/color_ffb321"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <include layout="@layout/include_recyclerview_refresh"/>

</LinearLayout>
