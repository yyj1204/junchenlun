<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    tools:context=".ui.fragment.MineFragment">

    <com.wktx.www.subjects.widget.MyScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_96"
                android:background="@color/color_ffb321"/>
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rela_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_60"
                    android:background="@color/color_ffb321">
                </TextView>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/px_30"
                    android:paddingTop="@dimen/px_14">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_head"
                        android:layout_width="@dimen/px_146"
                        android:layout_height="@dimen/px_146"
                        android:layout_marginBottom="@dimen/px_28"
                        android:src="@drawable/img_mine_head" />

                        <com.zhy.autolayout.AutoLinearLayout
                            android:visibility="gone"
                            android:id="@+id/linear_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/px_30"
                            android:layout_toRightOf="@+id/civ_head"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_userName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/px_40"
                                android:text="账户名"
                                android:textColor="@color/color_000000"
                                android:textSize="@dimen/sp_18" />
                            <com.zhy.autolayout.AutoLinearLayout
                                android:id="@+id/linear_certification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/px_10"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="@dimen/px_20"
                                    android:layout_height="@dimen/px_24"
                                    android:src="@drawable/ic_mine_certification" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/px_20"
                                    android:text="申请账户认证"
                                    android:textColor="@color/color_ffb321"
                                    android:textSize="@dimen/sp_12" />
                                <ImageView
                                    android:layout_width="@dimen/px_14"
                                    android:layout_height="@dimen/px_16"
                                    android:layout_marginLeft="@dimen/px_20"
                                    android:src="@drawable/ic_mine_arrow_right_yellow" />
                            </com.zhy.autolayout.AutoLinearLayout>

                            <com.zhy.autolayout.AutoLinearLayout
                                android:visibility="gone"
                                android:id="@+id/linear_certification1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/px_10"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="@dimen/px_20"
                                    android:layout_height="@dimen/px_24"
                                    android:src="@drawable/ic_mine_certification1" />
                                <TextView
                                    android:id="@+id/tv_certificationState"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/px_20"
                                    android:text="认证状态"
                                    android:textColor="@color/color_999999"
                                    android:textSize="@dimen/sp_12" />
                            </com.zhy.autolayout.AutoLinearLayout>
                        </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/linear_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/px_60"
                        android:layout_marginLeft="@dimen/px_46"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/civ_head"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_login"
                            android:layout_width="@dimen/px_160"
                            android:layout_height="@dimen/px_56"
                            android:layout_marginRight="@dimen/px_50"
                            android:text="登录"
                            android:gravity="center"
                            android:background="@drawable/shape_stroke_a0a0a0_18"
                            android:textColor="@color/color_000000" />
                        <TextView
                            android:id="@+id/tv_register"
                            android:layout_width="@dimen/px_160"
                            android:layout_height="@dimen/px_56"
                            android:text="注册"
                            android:gravity="center"
                            android:background="@drawable/shape_buttom_ffb321_18"
                            android:textColor="@color/color_000000" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_126"
                android:layout_marginTop="@dimen/px_2"
                android:background="@color/color_f0f0f0"
                android:orientation="horizontal">
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/linear_balance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_mine_linearlayout"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_20"
                        android:text="余额"
                        android:textSize="@dimen/sp_13" />
                </com.zhy.autolayout.AutoLinearLayout>
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/linear_frozenMoney"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_mine_linearlayout"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/px_2"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_frozenMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/color_fa6865"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_20"
                        android:text="冻结金额"
                        android:textSize="@dimen/sp_13" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:orientation="vertical"
                android:paddingBottom="@dimen/px_100">
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/linear_myResume"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_86"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_mine_linearlayout"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/px_44"
                        android:layout_height="@dimen/px_44"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_20"
                        android:src="@drawable/ic_mine_resume" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="我的简历"
                        android:textColor="@color/color_000000" />
                    <ImageView
                        android:layout_width="@dimen/px_18"
                        android:layout_height="@dimen/px_32"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_mine_arrow_right_gray" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/linear_myCollect"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_86"
                    android:layout_marginTop="@dimen/px_2"
                    android:background="@drawable/selector_mine_linearlayout"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/px_44"
                        android:layout_height="@dimen/px_44"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_20"
                        android:src="@drawable/ic_mine_collect" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="我的收藏"
                        android:textColor="@color/color_000000" />
                    <ImageView
                        android:layout_width="@dimen/px_18"
                        android:layout_height="@dimen/px_32"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_mine_arrow_right_gray" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/linear_tradeRecord"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_86"
                    android:layout_marginTop="@dimen/px_2"
                    android:background="@drawable/selector_mine_linearlayout"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/px_44"
                        android:layout_height="@dimen/px_44"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_20"
                        android:src="@drawable/ic_mine_transact" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="交易记录"
                        android:textColor="@color/color_000000" />
                    <ImageView
                        android:layout_width="@dimen/px_18"
                        android:layout_height="@dimen/px_32"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_mine_arrow_right_gray" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/linear_interviewRecord"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_86"
                    android:layout_marginTop="@dimen/px_2"
                    android:background="@drawable/selector_mine_linearlayout"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/px_44"
                        android:layout_height="@dimen/px_44"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_20"
                        android:src="@drawable/ic_mine_interview" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="面试记录"
                        android:textColor="@color/color_000000" />
                    <ImageView
                        android:layout_width="@dimen/px_18"
                        android:layout_height="@dimen/px_32"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_mine_arrow_right_gray" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/linear_employRecord"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_86"
                    android:layout_marginTop="@dimen/px_2"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_mine_linearlayout"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/px_44"
                        android:layout_height="@dimen/px_44"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_20"
                        android:src="@drawable/ic_mine_employ" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="雇佣记录"
                        android:textColor="@color/color_000000" />
                    <ImageView
                        android:layout_width="@dimen/px_18"
                        android:layout_height="@dimen/px_32"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_mine_arrow_right_gray" />
                </com.zhy.autolayout.AutoLinearLayout>


                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/linear_aboutApp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_86"
                    android:layout_marginTop="@dimen/px_20"
                    android:background="@drawable/selector_mine_linearlayout"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/px_44"
                        android:layout_height="@dimen/px_44"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_20"
                        android:src="@drawable/ic_mine_aboutus" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="关于我们"
                        android:textColor="@color/color_000000" />
                    <ImageView
                        android:layout_width="@dimen/px_18"
                        android:layout_height="@dimen/px_32"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_mine_arrow_right_gray" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/linear_accountSecurity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_86"
                    android:layout_marginTop="@dimen/px_2"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_mine_linearlayout"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/px_44"
                        android:layout_height="@dimen/px_44"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_20"
                        android:src="@drawable/ic_mine_security" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="账户安全"
                        android:textColor="@color/color_000000" />
                    <ImageView
                        android:layout_width="@dimen/px_18"
                        android:layout_height="@dimen/px_32"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_mine_arrow_right_gray" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/linear_contactService"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_86"
                    android:layout_marginTop="@dimen/px_2"
                    android:background="@drawable/selector_mine_linearlayout"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/px_44"
                        android:layout_height="@dimen/px_44"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_20"
                        android:src="@drawable/ic_mine_service" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="联系客服"
                        android:textColor="@color/color_000000" />
                    <ImageView
                        android:layout_width="@dimen/px_18"
                        android:layout_height="@dimen/px_32"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_mine_arrow_right_gray" />
                </com.zhy.autolayout.AutoLinearLayout>


                <Button
                    android:id="@+id/bt_logout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_90"
                    android:layout_marginTop="@dimen/px_30"
                    android:background="@drawable/selector_submit_selected"
                    android:gravity="center"
                    android:text="退出登录"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/sp_15" />

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.wktx.www.subjects.widget.MyScrollView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:background="@color/color_ffb321"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/title_tab_mine"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_23" />
        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/px_100"
            android:paddingRight="@dimen/px_40"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/ic_message" />
    </android.support.v7.widget.Toolbar>
</com.zhy.autolayout.AutoRelativeLayout>