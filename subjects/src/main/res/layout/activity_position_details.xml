<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar_activity"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:orientation="vertical"
                android:padding="@dimen/px_30">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="职位"
                        android:singleLine="true"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_experience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_20"
                        android:text="工作经验"
                        android:textColor="@color/color_ffb321"
                        android:background="@drawable/shape_stroke_ffb321_18"
                        android:textSize="@dimen/sp_10" />
                    <LinearLayout
                        android:id="@+id/linear_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/px_14"
                        android:gravity="right"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_collect"
                            android:layout_width="@dimen/px_32"
                            android:layout_height="@dimen/px_30"
                            android:src="@drawable/selector_star_collect" />
                        <TextView
                            android:id="@+id/tv_collect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_10"
                            android:text="收藏"
                            android:textColor="@color/color_000000"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_demandSalary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="薪资"
                        android:textColor="@color/color_fa716f"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_hireType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_10"
                        android:text="(雇佣方式)"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="类目:"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_13" />
                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_13" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_30"
                        android:text="平台:"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_13"  />
                    <TextView
                        android:id="@+id/tv_platform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_13" />
                    <TextView
                        android:id="@+id/tv_patternTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_30"
                        android:text="设计模式:"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_13"  />
                    <TextView
                        android:id="@+id/tv_pattern"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:singleLine="true"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_addTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_10"
                    android:text="发布时间:"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:background="@color/color_ffffff"
                android:padding="@dimen/px_30"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/px_24"
                        android:layout_height="@dimen/px_24"
                        android:src="@drawable/ic_position_details" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_14"
                        android:layout_weight="1"
                        android:text="职位描述"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_13" />
                    <TextView
                        android:id="@+id/tv_overdueState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_14"
                        android:text="过期状态"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_demandTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_30"
                    android:text="需求标题"
                    android:singleLine="true"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_demandContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_20"
                    android:lineSpacingExtra="@dimen/px_10"
                    android:text="需求内容"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_13"
                    android:background="@color/color_ffffff"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_10"
                    android:background="@color/color_ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="截止时间"
                        android:textColor="@color/color_ffb321"
                        android:textSize="@dimen/sp_13" />
                    <TextView
                        android:id="@+id/tv_endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_14"
                        android:text="截止时间"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/px_30"
                android:layout_marginTop="@dimen/px_20"
                android:background="@drawable/selector_mine_linearlayout"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_width="@dimen/px_106"
                    android:layout_height="@dimen/px_106"
                    android:src="@drawable/img_mine_head" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/px_14"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_companyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公司名称"
                        android:layout_weight="1"
                        android:textColor="@color/color_ffb321"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_companySite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_5"
                        android:text="公司地址"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_13" />
                    <TextView
                        android:id="@+id/tv_storeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_5"
                        android:drawableLeft="@drawable/ic_message_store"
                        android:drawablePadding="@dimen/px_14"
                        android:text="店铺名"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_13" />
                    <TextView
                        android:id="@+id/tv_storeUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_5"
                        android:text="店铺网址"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>
                <ImageView
                    android:layout_width="@dimen/px_16"
                    android:layout_height="@dimen/px_20"
                    android:layout_marginLeft="@dimen/px_14"
                    android:src="@drawable/ic_mine_arrow_right_gray"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:layout_marginTop="@dimen/px_20"
                android:orientation="vertical"
                android:padding="@dimen/px_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司介绍"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_000000"/>

                <TextView
                    android:id="@+id/tv_companyRemark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_20"
                    android:text="公司介绍"
                    android:textSize="@dimen/sp_13"
                    android:lineSpacingExtra="@dimen/px_10"
                    android:textColor="@color/color_999999"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/bt_interview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:background="@drawable/selector_submit_selected"
        android:gravity="center"
        android:text="立即应聘"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_15" />
</LinearLayout>