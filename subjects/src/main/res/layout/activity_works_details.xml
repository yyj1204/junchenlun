<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.wktx.www.subjects.ui.activity.mine.works.WorksDetailsActivity">

    <include layout="@layout/include_toolbar_activity" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_62"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_30"
                android:background="@color/color_f0f0f0"
                android:gravity="center_vertical"
                android:text="标题"
                android:textColor="@color/color_5d5d5d"
                android:textSize="@dimen/sp_12" />
            <EditText
                android:id="@+id/et_worksTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_72"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_30"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:hint="请填写作品标题"
                android:singleLine="true"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_13" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_62"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_30"
                android:background="@color/color_f0f0f0"
                android:gravity="center_vertical"
                android:text="设计类型"
                android:textColor="@color/color_5d5d5d"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:id="@+id/linear_designPattern"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_72"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_30"
                android:background="@drawable/selector_mine_linearlayout"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_designPattern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="点击选择设计类型"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_13" />
                <ImageView
                    android:layout_width="@dimen/px_16"
                    android:layout_height="@dimen/px_20"
                    android:layout_marginLeft="@dimen/px_14"
                    android:src="@drawable/ic_mine_arrow_right_gray" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_62"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_30"
                android:background="@color/color_f0f0f0"
                android:gravity="center_vertical"
                android:text="类目"
                android:textColor="@color/color_5d5d5d"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:id="@+id/linear_category"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_72"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_30"
                android:background="@drawable/selector_mine_linearlayout"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="点击选择类目"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_13" />
                <ImageView
                    android:layout_width="@dimen/px_16"
                    android:layout_height="@dimen/px_20"
                    android:layout_marginLeft="@dimen/px_14"
                    android:src="@drawable/ic_mine_arrow_right_gray" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_62"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_30"
                android:background="@color/color_f0f0f0"
                android:gravity="center_vertical"
                android:text="简介"
                android:textColor="@color/color_5d5d5d"
                android:textSize="@dimen/sp_12" />
            <EditText
                android:id="@+id/et_worksIntro"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_200"
                android:paddingTop="@dimen/px_20"
                android:paddingBottom="@dimen/px_20"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_30"
                android:background="@color/color_ffffff"
                android:gravity="top|left"
                android:hint="请填写作品简介"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_13" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_62"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_30"
                android:background="@color/color_f0f0f0"
                android:gravity="center_vertical"
                android:text="作品内容"
                android:textColor="@color/color_5d5d5d"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:id="@+id/linear_imgAdd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_62"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/selector_mine_linearlayout" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_resume_add"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="上传"
                    android:layout_marginLeft="@dimen/px_20"
                    android:textColor="@color/color_ffb321"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <include layout="@layout/include_recyclerview_f0f0f0"/>

            <Button
                android:id="@+id/bt_save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_90"
                android:layout_marginTop="@dimen/px_100"
                android:layout_marginBottom="@dimen/px_50"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginRight="@dimen/px_30"
                android:background="@drawable/selector_submit_selected_10"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/sp_15"/>

            <Button
                android:id="@+id/bt_delete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_90"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginRight="@dimen/px_30"
                android:layout_marginBottom="@dimen/px_50"
                android:background="@drawable/shape_buttom_e1e1e1_10"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_15"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
