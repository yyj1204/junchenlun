<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    tools:context="com.wktx.www.subjects.ui.activity.mine.security.EditPhoneActivity">

    <include layout="@layout/include_toolbar_activity"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/px_30"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_90"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableLeft="@drawable/ic_login_phone"
                    android:drawablePadding="@dimen/px_16"
                    android:hint="请输入新手机号"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="11"
                    android:textColorHint="@color/color_b2b2b2"
                    android:textSize="@dimen/sp_14" />
                <TextView
                    android:id="@+id/tv_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px_10"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/color_ffb321"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_2"
                android:background="@color/color_f2f2f2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_90"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/ic_login_code"
                android:drawablePadding="@dimen/px_16"
                android:hint="请输入验证码"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/color_000000"
                android:textColorHint="@color/color_b2b2b2"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_14" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_2"
                android:background="@color/color_f2f2f2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_90"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/px_5"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/ic_login_psw"
                android:drawablePadding="@dimen/px_21"
                android:hint="请输入登录密码(6-20位数字、字母)"
                android:singleLine="true"
                android:inputType="textPassword"
                android:digits="@string/string_pwd_login"
                android:textColor="@color/color_000000"
                android:textColorHint="@color/color_b2b2b2"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_14" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_2"
                android:background="@color/color_f2f2f2" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_90"
            android:layout_marginTop="@dimen/px_80"
            android:background="@drawable/selector_submit_selected_10"
            android:gravity="center"
            android:text="确定修改"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>
</LinearLayout>
