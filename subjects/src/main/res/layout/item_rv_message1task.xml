<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/selector_mine_linearlayout"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30">
        <TextView
            android:id="@+id/tv_demandTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="需求标题"
            android:textColor="@color/color_000000"
            android:textStyle="bold"
            android:textSize="@dimen/sp_15" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_responseState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_solid_fa716f_10"
            android:text="响应状态"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_12" />
        <ImageView
            android:id="@+id/iv_hireState"
            android:visibility="gone"
            android:layout_width="@dimen/px_84"
            android:layout_height="@dimen/px_40"
            android:src="@drawable/ic_manage_state1" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_demandContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/px_20"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_13"
        android:text="需求详情"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/color_f0f0f0"
        android:layout_marginTop="@dimen/px_30"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/px_30"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/px_60"
            android:layout_height="@dimen/px_60"
            android:src="@drawable/img_mine_head" />
        <TextView
            android:id="@+id/tv_storeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/px_14"
            android:text="店铺名称"
            android:textColor="@color/color_ffb321"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:id="@+id/tv_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_14"
            android:text="截止时间"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>