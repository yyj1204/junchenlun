<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_f0f0f0"
    tools:context="com.wktx.www.subjects.ui.activity.manage.leave.LeaveActivity">

    <include layout="@layout/include_toolbar_activity" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_weight="1"
        android:paddingBottom="@dimen/px_100">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linear_beginTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/px_30"
                android:background="@drawable/selector_mine_linearlayout"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="开始时间"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_000000"/>
                <TextView
                    android:id="@+id/tv_beginTime"
                    android:layout_width="@dimen/px_420"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999999"
                    android:singleLine="true"
                    android:gravity="right"
                    android:hint="请选择"
                    android:textSize="@dimen/sp_13"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/ic_mine_arrow_right_gray"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_endTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/px_30"
                android:layout_marginTop="@dimen/px_1"
                android:background="@drawable/selector_mine_linearlayout"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="结束时间"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_000000"/>
                <TextView
                    android:id="@+id/tv_endTime"
                    android:layout_width="@dimen/px_420"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999999"
                    android:singleLine="true"
                    android:gravity="right"
                    android:hint="请选择"
                    android:textSize="@dimen/sp_13"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/ic_mine_arrow_right_gray"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:background="@color/color_ffffff"
                android:text="请假事由"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_000000"
                android:padding="@dimen/px_30"/>
            <EditText
                android:id="@+id/et_leaveReason"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_200"
                android:background="@color/color_ffffff"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_30"
                android:hint="请填写请假事由"
                android:lineSpacingExtra="@dimen/px_10"
                android:gravity="top|left"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_15"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:background="@color/color_ffffff"
                android:text="图片"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_000000"
                android:padding="@dimen/px_30"/>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rela_leaveImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/px_30"
                android:background="@color/color_ffffff">
                <ImageView
                    android:id="@+id/iv_leaveImg"
                    android:layout_width="@dimen/px_280"
                    android:layout_height="@dimen/px_280"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/iv_delete_leaveImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_250"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_photo_delete"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_add_leaveImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/px_30"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/selector_mine_linearlayout">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_photo_add"
                    android:padding="@dimen/px_10"
                    android:background="@color/color_f0f0f0"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:background="@drawable/selector_submit_selected"
        android:gravity="center"
        android:text="提交申请"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_15" />
</LinearLayout>
