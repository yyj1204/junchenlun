<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_000000"
    android:fitsSystemWindows="true"
    tools:context="com.wktx.www.subjects.ui.activity.ImageActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_imgNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="@dimen/px_30"
        android:padding="@dimen/px_20"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_ffffff" />

    <TextView
        android:id="@+id/tv_save"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/px_30"
        android:padding="@dimen/px_20"
        android:textSize="@dimen/sp_14"
        android:text="保存"
        android:textColor="@color/color_ffffff" />

</com.zhy.autolayout.AutoFrameLayout>
