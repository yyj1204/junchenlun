<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    android:orientation="vertical"
    tools:context=".ui.fragment.MessageFragment">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:background="@color/color_ffb321"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tb_TvBarTitle1"
            android:layout_width="@dimen/px_160"
            android:layout_height="@dimen/px_60"
            android:layout_gravity="center"
            android:text="工作"
            android:gravity="center"
            android:background="@drawable/selector_message_title1"
            android:textColor="@color/selector_ffffff_ffb321"
            android:textSize="@dimen/sp_18" />
        <TextView
            android:id="@+id/tb_TvBarTitle2"
            android:layout_width="@dimen/px_160"
            android:layout_height="@dimen/px_60"
            android:layout_gravity="center"
            android:text="互动"
            android:gravity="center"
            android:background="@drawable/selector_message_title2"
            android:textColor="@color/selector_ffffff_ffb321"
            android:textSize="@dimen/sp_18"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/linear_tab1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:id="@+id/layout_smartTab1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_70"
            android:background="@color/color_f7f7f7"
            android:paddingTop="@dimen/px_20"
            app:stl_distributeEvenly="true"
            app:stl_indicatorInFront="false"
            app:stl_indicatorColor="@color/color_ffb321"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="@dimen/px_4"
            app:stl_dividerThickness="0dp"
            app:stl_underlineThickness="0dp"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_f0f0f0" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/linear_tab2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:id="@+id/layout_smartTab2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_70"
            android:background="@color/color_f7f7f7"
            android:paddingTop="@dimen/px_20"
            app:stl_distributeEvenly="true"
            app:stl_indicatorInFront="false"
            app:stl_indicatorColor="@color/color_ffb321"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="@dimen/px_4"
            app:stl_dividerThickness="0dp"
            app:stl_underlineThickness="0dp"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_f0f0f0" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/linear_nothing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/px_30"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/string_manage_hint1"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_20" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_30"
            android:gravity="center"
            android:text="@string/string_manage_hint2"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_15" />
        <ImageView
            android:layout_width="@dimen/px_578"
            android:layout_height="@dimen/px_420"
            android:layout_marginTop="@dimen/px_60"
            android:src="@drawable/img_nothing_work" />
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_96"
            android:background="@drawable/selector_submit_selected_10"
            android:textColor="@color/color_ffffff"
            android:gravity="center"
            android:text="未登录，去登录"
            android:textSize="@dimen/sp_18" />
        <TextView
            android:id="@+id/tv_selectWork"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_96"
            android:layout_marginTop="@dimen/px_30"
            android:background="@drawable/shape_stroke_ffb321_10"
            android:gravity="center"
            android:text="挑合适的工作"
            android:textColor="@color/color_ffb321"
            android:textSize="@dimen/sp_18" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
