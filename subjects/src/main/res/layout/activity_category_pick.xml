<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/color_00000000"
    android:fitsSystemWindows="true"
    tools:context="com.wktx.www.subjects.ui.activity.mine.resume.CategoryPickActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_100"
        android:layout_marginRight="@dimen/px_100"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/color_ffffff">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/px_50"
            android:paddingRight="@dimen/px_50"
            android:layout_height="@dimen/px_600"
            android:background="@color/color_ffffff">
        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_mine_linearlayout"
                android:padding="@dimen/px_30"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_000000"
                android:text="取消" />
            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector_mine_linearlayout"
                android:padding="@dimen/px_30"
                android:text="确定"
                android:textColor="@color/color_ffb321"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
