<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_mine_linearlayout"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:paddingTop="@dimen/px_30"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职位"
            android:singleLine="true"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:text="工作经验"
            android:textColor="@color/color_ffb321"
            android:background="@drawable/shape_stroke_ffb321_18"
            android:textSize="@dimen/sp_10" />
        <TextView
            android:id="@+id/tv_demandSalary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_14"
            android:text="薪资"
            android:gravity="right"
            android:textColor="@color/color_fa716f"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_hireType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:text="(雇佣方式)"
            android:textSize="@dimen/sp_10" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:layout_marginTop="@dimen/px_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类目:"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:text="平台:"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_13"  />
        <TextView
            android:id="@+id/tv_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:id="@+id/tv_patternTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:text="设计模式:"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_13"  />
        <TextView
            android:id="@+id/tv_pattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:singleLine="true"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_demandTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:layout_marginTop="@dimen/px_10"
        android:drawableLeft="@drawable/ic_position_demand"
        android:drawablePadding="@dimen/px_14"
        android:text="需求标题"
        android:singleLine="true"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/sp_15" />
    <TextView
        android:id="@+id/tv_demandContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:layout_marginTop="@dimen/px_10"
        android:text="需求内容"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_13" />
    <TextView
        android:id="@+id/tv_endTime"
        android:layout_width="match_parent"
        android:paddingRight="@dimen/px_30"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_13"
        android:text="截止时间"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_marginTop="@dimen/px_10"
        android:background="@color/color_f0f0f0"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/px_30"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/px_60"
            android:layout_height="@dimen/px_60"
            android:src="@drawable/img_mine_head" />
        <TextView
            android:id="@+id/tv_storeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_14"
            android:text="店铺名称"
            android:textStyle="bold"
            android:textSize="@dimen/sp_15"
            android:singleLine="true"
            android:textColor="@color/color_ffb321"/>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>