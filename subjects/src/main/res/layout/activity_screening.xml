<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="130dp"
    tools:context=".Activity.ScreeningActivity">

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_white"
        android:clickable="false"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_one"
                android:layout_marginTop="48dp"
                android:background="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textview"
                android:layout_marginBottom="@dimen/dp_eight"
                android:gravity="center_horizontal"
                android:text="美工筛选"
                android:textColor="@color/title_color_gray"
                android:textSize="@dimen/sp_fifteen"></TextView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelayout"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_fifteen"
                android:paddingTop="@dimen/dp_ten"
                android:text="经验"
                android:textColor="@color/title_gray_5d"
                android:textSize="@dimen/sp_thirteen" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/id_flowlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_fifteen"
                    android:paddingRight="@dimen/dp_fifteen"
                    android:paddingTop="@dimen/dp_ten"
                    android:paddingBottom="@dimen/dp_ten"
                    zhy:max_select="1"
                    >
                </com.zhy.view.flowlayout.TagFlowLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_one"
                android:background="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_fifteen"
                android:paddingTop="@dimen/dp_ten"
                android:text="性别"
                android:textColor="@color/title_gray_5d"
                android:textSize="@dimen/sp_thirteen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_fifteen"
                android:paddingTop="@dimen/dp_ten">

                <TextView
                    android:id="@+id/screeningTvMan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tag_bg"
                    android:text="男"
                    android:textColor="@drawable/selector_textcolor"
                    android:textSize="@dimen/sp_twelve" />

                <TextView
                    android:id="@+id/screeningTvWomen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_nine"
                    android:background="@drawable/tag_bg"
                    android:text="女"
                    android:textColor="@drawable/selector_textcolor"
                    android:textSize="@dimen/sp_twelve" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/screeningTvCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:background="@color/white"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_fifteen" />

            <TextView
                android:id="@+id/screeningTvSure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:background="@color/colorPrimary"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_fifteen" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
