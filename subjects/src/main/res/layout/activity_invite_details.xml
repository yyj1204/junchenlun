<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.wktx.www.subjects.ui.activity.message.InviteDetailsActivity">

    <include layout="@layout/include_toolbar_activity"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical"
        android:padding="@dimen/px_30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_positionName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:text="职位名称"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_demandSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_40"
                android:text="¥0"
                android:textColor="@color/color_fa716f"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_pushMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(提成:0%)"
                android:textColor="@color/color_fa716f"
                android:layout_marginLeft="@dimen/px_20"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="雇佣时间："
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_13" />
            <TextView
                android:id="@+id/tv_hireTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司地址："
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_13" />
            <TextView
                android:id="@+id/tv_companySite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:layout_marginTop="@dimen/px_1"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/px_60"
            android:layout_height="@dimen/px_60"
            android:src="@drawable/img_mine_head" />
        <TextView
            android:id="@+id/tv_companyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_14"
            android:text="公司名称"
            android:layout_weight="1"
            android:textColor="@color/color_ffb321"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_14"
            android:text="时间"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_13"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_20"
        android:padding="@dimen/px_30"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/px_24"
            android:layout_height="@dimen/px_24"
            android:src="@drawable/ic_position_details" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_14"
            android:text="需求详情"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13" />
        android:textSize="@dimen/sp_thirteen" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_demandContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_1"
        android:padding="@dimen/px_30"
        android:text="需求内容"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/sp_12"
        android:background="@color/color_ffffff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:orientation="horizontal"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_mine_linearlayout"
            android:gravity="center"
            android:text="联系Ta"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_15" />
        <TextView
            android:id="@+id/tv_accept"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_submit_selected"
            android:gravity="center"
            android:text="接受"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_15" />
        <TextView
            android:id="@+id/tv_refuse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_999999"
            android:gravity="center"
            android:text="拒绝"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_15"/>
    </LinearLayout>
</LinearLayout>
