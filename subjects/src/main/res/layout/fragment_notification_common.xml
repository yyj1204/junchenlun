<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.notification.NotificationNoticeFragment">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:background="@color/color_ffffff"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:layout_marginBottom="@dimen/px_1"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_beginTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/px_60"
            android:gravity="center"
            android:hint="开始时间"
            android:textSize="@dimen/sp_13"
            android:background="@drawable/shape_buttom_e1e1e1_10"/>
        <TextView
            android:layout_width="@dimen/px_40"
            android:layout_height="@dimen/px_4"
            android:layout_marginLeft="@dimen/px_10"
            android:layout_marginRight="@dimen/px_10"
            android:background="@color/color_f0f0f0"/>
        <TextView
            android:id="@+id/tv_endTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/px_60"
            android:gravity="center"
            android:hint="结束时间"
            android:textSize="@dimen/sp_13"
            android:background="@drawable/shape_buttom_e1e1e1_10"/>
        <TextView
            android:id="@+id/tv_query"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_60"
            android:gravity="center"
            android:text="查询"
            android:textColor="@color/color_ffffff"
            android:layout_marginLeft="@dimen/px_30"
            android:textSize="@dimen/sp_13"
            android:background="@drawable/selector_submit_selected_10"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <include layout="@layout/include_recyclerview_refresh"/>
</com.zhy.autolayout.AutoLinearLayout>
